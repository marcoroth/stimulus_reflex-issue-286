<%= render "demo" %>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.account_id %></td>
        <td><%= link_to 'Show', project_path(id: project) %></td>
        <td><%= link_to 'Edit', edit_project_path(id: project) %></td>
        <td><%= link_to 'Destroy', project_path(id: project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
